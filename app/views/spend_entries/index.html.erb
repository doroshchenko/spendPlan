<p id="notice"><%= notice %></p>

<h1>Spend Entries</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spend_entries.each do |spend_entry| %>
      <tr>
        <td><%= spend_entry.amount %></td>
        <td><%= link_to 'Show', spend_entry %></td>
        <td><%= link_to 'Edit', edit_spend_entry_path(spend_entry) %></td>
        <td><%= link_to 'Destroy', spend_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Spend Entry', new_spend_entry_path %>
